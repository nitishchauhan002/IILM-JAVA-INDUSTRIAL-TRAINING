// inheritance 
// Single inheritance 
Code 1:-
class Vehicle { // parent 
    void start() {
        System.out.println("Vehicle Starts");
    }
}
class Bike extends Vehicle { // child
    void drive() {
        System.out.println("Bike running");
    }
}

public class Main
{
	public static void main(String[] args) {
	    Bike b = new Bike();
	    b.start();
	    b.drive();
		
	}
}
code 2:-
  // Parent class
class Vehicle {
    void start() {
        System.out.println("Vehicle Starts");
    }
}

class Bike extends Vehicle {
    void drive() {
        System.out.println("Bike is running");
    }
}

class SportsBike extends Bike {
    void speed() {
        System.out.println("SportsBike is very fast");
    }
}

public class Main {
    public static void main(String[] args) {
        SportsBike sb = new SportsBike();
        sb.start();   // From Vehicle
        sb.drive();   // From Bike
        sb.speed();   // From SportsBike
    }
}
code-3
  // Multiple inheritance 

// Parent 1
interface Vehicle {
    void start();
}

// Parent 2
interface Engine {
    void power();
}

// Child class
class Bike implements Vehicle, Engine {

    public void start() {
        System.out.println("Vehicle Starts");
    }

    public void power() {
        System.out.println("Engine  on");
    }

    void drive() {
        System.out.println("Bike running");
    }
}

public class Main {
    public static void main(String[] args) {
        Bike b = new Bike();
        b.start();   // From Vehicle
        b.power();  // From Engine
        b.drive();  // From Bike
    }
}
